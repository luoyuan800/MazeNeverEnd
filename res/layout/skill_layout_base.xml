            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal|bottom">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button14" android:layout_gravity="center_horizontal|top"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button15" android:layout_gravity="center_horizontal|top"/>
