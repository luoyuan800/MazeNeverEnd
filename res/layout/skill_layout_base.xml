<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_gravity="center"
            android:background="@android:color/background_light">
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="left|center_vertical"
                android:gravity="fill">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button" android:layout_gravity="center_horizontal"/>

            <ImageView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/line_2_center"
                    android:adjustViewBounds="true"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button2" android:layout_gravity="center_horizontal|top"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button3" android:layout_gravity="center_horizontal|top"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image2" android:layout_gravity="right|top"
                        android:src="@drawable/line_2_right" android:adjustViewBounds="false" android:layout_weight="1"
                        />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/image3" android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/line_2_left" android:adjustViewBounds="false"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal|bottom">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button4" android:layout_gravity="center_horizontal|top"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button5" android:layout_gravity="center_horizontal|top"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button6" android:layout_gravity="center_horizontal|top"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2" android:layout_gravity="center" android:src="@drawable/line_3_center"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button7" android:layout_gravity="center" android:background="@drawable/hit"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3" android:layout_gravity="center"
                    android:src="@drawable/line_3_center_down"/>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center_horizontal|bottom">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
