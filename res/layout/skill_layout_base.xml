                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button12" android:layout_gravity="center_horizontal|top"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:layout_weight="1"
                        android:id="@+id/button13" android:layout_gravity="center_horizontal|top"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_1_center"
                        android:id="@+id/imageView7" android:layout_gravity="left|top"
                        android:layout_weight="1" android:adjustViewBounds="false"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView8" android:layout_gravity="center_horizontal|top"
                        android:src="@drawable/line_1_center" android:layout_weight="1"
