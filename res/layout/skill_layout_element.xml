<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_gravity="left|center_vertical"
        android:gravity="fill" android:id="@+id/element_skill_root">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元素变化"
            android:gravity="center"
            android:id="@+id/element_skill_ysbh" android:layout_gravity="center"
            android:typeface="serif"
            android:textStyle="bold|italic"
            android:textColor="@color/disable"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/line_3_center_down"
            android:adjustViewBounds="true"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素控制"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:id="@+id/element_skill_yskz" android:layout_gravity="center|top" android:textColor="@color/un_active"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素防御"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:id="@+id/element_skill_ysfy" android:layout_gravity="center|top"
                android:textColor="@color/active"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素吸收"
                android:id="@+id/element_skill_ysxs" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_1_center"
                android:layout_gravity="left|top"
                android:layout_weight="1" android:adjustViewBounds="false"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/line_1_center" android:layout_gravity="left|top" android:layout_weight="1"
                   android:adjustViewBounds="false" android:id="@+id/imageView2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:src="@drawable/line_1_center" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素压制"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:id="@+id/element_skill_ysyz" android:layout_gravity="center|top"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素虚无"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:id="@+id/element_skill_ysxvwu" android:layout_gravity="center|top"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  元素使  "
                android:id="@+id/element_skill_yss" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_1_center"
                android:id="@+id/imageView4" android:layout_gravity="left|top"
                android:layout_weight="1" android:adjustViewBounds="false"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView3"
                   android:layout_gravity="left|top" android:src="@drawable/line_1_center" android:layout_weight="1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6" android:layout_gravity="left|top"
                android:src="@drawable/line_1_center" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素星爆"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:id="@+id/element_skill_ysxb" android:layout_gravity="center|top"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风刃"
                android:layout_weight="1"
                android:gravity="center"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:id="@+id/element_skill_fenren" android:layout_gravity="center|top"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素风暴"
                android:id="@+id/element_skill_ysfb" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:id="@+id/linearLayout">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/line_1_center" android:id="@+id/imageView5" android:layout_gravity="left|top"
                   android:layout_weight="1" android:adjustViewBounds="false"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView7"
                   android:layout_gravity="left|top" android:layout_weight="1" android:src="@drawable/line_1_center"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView8"
                   android:layout_gravity="left|top" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:id="@+id/linearLayout2">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="元素冰封"
                android:layout_weight="1" android:gravity="center" android:typeface="serif"
                android:textStyle="bold|italic" android:id="@+id/element_skill_ysbf"
                android:layout_gravity="center|top"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="土遁"
                android:layout_weight="1" android:gravity="center" android:typeface="serif"
                android:textStyle="bold|italic" android:id="@+id/element_skill_td"
                android:layout_gravity="center|top"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/button6" android:layout_weight="1" android:background="#00000000"
                android:text="                      "/>
    </LinearLayout>

</LinearLayout>
