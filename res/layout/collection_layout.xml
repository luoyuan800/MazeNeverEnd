<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="@drawable/wuxin" android:gravity="center">

    <ImageButton
            android:layout_width="233dp"
            android:layout_height="70dp"
            android:id="@+id/wuxin_up" android:background="@drawable/wuxin_up" android:layout_gravity="center"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <ImageButton
                android:layout_width="118dp"
                android:layout_height="73dp"
                android:id="@+id/wuxin_left" android:background="#00000000" android:layout_gravity="center"/>
        <ImageButton
                android:layout_width="115dp"
                android:layout_height="73dp"
                android:id="@+id/wuxin_right" android:background="#00000000" android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center" android:orientation="horizontal">
        <ImageButton
                android:layout_width="117dp"
                android:layout_height="89dp"
                android:id="@+id/wuxin_down_left" android:background="#00000000"/>
        <ImageButton
                android:layout_width="116dp"
                android:layout_height="89dp"
                android:id="@+id/wuxin_down_right" android:background="@drawable/wuxin_down_right"
                />
    </LinearLayout>
</LinearLayout>