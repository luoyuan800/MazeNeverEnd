<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/add_point_root">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_point_image" android:layout_gravity="center" android:src="@drawable/h_4"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="+1"
            android:id="@+id/add_point_1"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="+n"
            android:id="@+id/add_point_n"/>
</LinearLayout>