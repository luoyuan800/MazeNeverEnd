<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="200dp"
              android:layout_height="200dp" android:background="@drawable/sanjiao_kuang_kuang_bak">

    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/wu_pin_button" android:src="@drawable/wupin_zi" android:scaleType="fitCenter"
            android:layout_marginTop="45dp" android:layout_marginLeft="85dp" android:background="#00000000"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="20dp">
        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/chong_wu_button" android:background="#00000000" android:src="@drawable/chong_zi"
                android:scaleType="fitCenter" android:layout_marginTop="23dp" android:layout_marginLeft="40dp"/>
        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/build_button" android:scaleType="fitCenter" android:src="@drawable/zhao_zi"
                android:background="#00000000" android:layout_marginLeft="8dp"/>
        <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/accessory_button" android:scaleType="fitCenter" android:background="#00000000"
                android:src="@drawable/zhuang_zi" android:layout_marginTop="23dp" android:layout_marginLeft="12dp"/>
    </LinearLayout>
</LinearLayout>