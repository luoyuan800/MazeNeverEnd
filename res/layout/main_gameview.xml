<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainGameActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/main_info_sv"
            android:layout_width="200dp"

            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:fadeScrollbars="false">

            <LinearLayout
                android:id="@+id/main_info_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#ff11f8ff"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#fff" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toEndOf="@id/main_info_sv">

            <LinearLayout
                android:id="@+id/root_item_character"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/character_itembar"
                    android:layout_width="fill_parent"
                    android:layout_height="70sp"
                    android:background="#58c4ff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/character_itembar_contribute"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#7a31ff"
                        android:clickable="true"
                        android:gravity="center"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/character_item_contribute"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/hero_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textSize="6sp" />

                            <TextView
                                android:id="@+id/hero_pic_click_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/first_skill"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:alpha="80"
                                android:gravity="center"
                                android:textSize="6sp" />

                            <Button
                                android:id="@+id/secondary_skill"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:alpha="70"
                                android:gravity="center"
                                android:textSize="6sp" />

                            <Button
                                android:id="@+id/third_skill"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:alpha="70"
                                android:gravity="center"
                                android:textSize="6sp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/local_box"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/st"
                                    android:gravity="center"
                                    android:textSize="6sp" />

                                <TextView
                                    android:id="@+id/key_count"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/ys"
                                    android:gravity="center"
                                    android:textSize="6sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/hp_label"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_contri_hp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/atk_name"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_contri_att"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/def_name"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_contri_def"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/material_label"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/main_contri_currentexp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/point_label"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/main_contri_needexp"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/main_contri_add_str"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/strength_label"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/main_contri_add_pow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/life_label"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/main_contri_add_agi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/agile_label"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/add_n_stre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="+n力"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/add_n_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="+n体"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/add_n_agi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="+n敏"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/sword_label"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_contri_level"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:singleLine="false"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/up_sword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/level_up"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/up_t_sword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="+10"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/armor_label"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_armor_level"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/up_armor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/level_up"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/up_t_armor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="+10"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/skill_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/skill_label"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/achieve_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/achievement_label"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/book_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/book_label"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/issue_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:text="任务"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/batte_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:text="竞技场"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/order_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:enabled="false"
                                android:text="排名"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <!--<View
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            />
-->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/pause_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/pause_label"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/save_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="存档"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/reset_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/reset_label"
                                android:textSize="8sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/skill_point_get_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="获取技能点"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/buy_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/buy_label"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/upload_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:text="@string/upload_label"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/update_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_horizontal"
                                android:layout_weight="1"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
