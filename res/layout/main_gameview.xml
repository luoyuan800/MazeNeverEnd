<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.MainGameActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">


            <TextView
                android:id="@+id/hat_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp" android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pet_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp" android:layout_gravity="bottom"/>
                <Button
                    android:id="@+id/hero_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/h_1"
                    android:focusableInTouchMode="false"
                    android:gravity="end"
                    android:textSize="6sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/hero_pic_click_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/necklace_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ring_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/local_box"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:drawableTop="@drawable/st"
                    android:gravity="center"
                    android:textSize="6sp" />

                <TextView
                    android:id="@+id/key_count"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:drawableTop="@drawable/ys"
                    android:gravity="center"
                    android:textSize="6sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/main_info_sv"
        android:layout_width="200dp"

        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/main_info_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#ff11f8ff"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fff" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/main_info_sv">

        <LinearLayout
            android:id="@+id/root_item_character"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/character_itembar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#58c4ff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff00acff"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/character_itembar_contribute"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff00acff"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/character_item_contribute"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/first_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:alpha="80"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:textSize="8sp" />

                        <Button
                            android:id="@+id/secondary_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:alpha="70"
                            android:gravity="center"
                            android:textSize="8sp" />

                        <Button
                            android:id="@+id/third_skill"
                            android:layout_width="wrap_content"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:alpha="70"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="@string/hp_label"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/main_contri_hp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="123456"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="@string/atk_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/main_contri_att"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="123456"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="@string/def_name"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/main_contri_def"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:gravity="center_vertical"
                        android:text="@string/sword_label"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/main_contri_level"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:singleLine="false"
                        android:text="1"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:text="@string/armor_label"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/main_armor_level"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="12"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="@string/material_label"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/hero_material_count"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|center_vertical"
                        android:text="1234"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="@string/point_label"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/hero_points"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center|center_vertical"
                        android:text="1234"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prev_button_system_button"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start"
                        android:focusableInTouchMode="false"
                        android:text="&lt;"
                        android:textColor="#0dc2fb"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/skill_system_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/red" />

                    <Button
                        android:id="@+id/next_button_system_button"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:focusableInTouchMode="false"
                        android:text="&gt;"
                        android:textColor="#0dc2fb"
                        android:textSize="12sp" />
                </LinearLayout>

                <ViewFlipper
                    android:id="@+id/button_group_flipper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
