<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:id="@+id/zan_zu_root"
              android:layout_height="wrap_content"
    android:background="#00000000"
              android:baselineAligned="false" android:gravity="center">

    <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp" android:background="@drawable/sanjiao_bak">
        <ImageButton
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:id="@+id/upload_button" android:layout_gravity="center|top" android:src="@drawable/shng_zi"
                android:scaleType="fitXY" android:layout_marginTop="15dp" android:layout_centerHorizontal="true"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="bottom" android:gravity="bottom|left"
                android:layout_alignParentBottom="true">
            <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:id="@+id/zan_zu_button" android:src="@drawable/zan_zi" android:scaleType="centerInside"
                    android:layout_marginBottom="25dp"/>
            <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:id="@+id/update_button" android:src="@drawable/geng_zi" android:scaleType="centerInside"
                    android:layout_marginBottom="25dp" android:layout_marginLeft="80dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>