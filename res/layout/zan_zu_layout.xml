<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:id="@+id/zan_zu_root"
              android:layout_height="wrap_content"
    android:background="#00000000"
              android:baselineAligned="false" android:gravity="center">

    <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="300dp" android:background="@drawable/yuanhuan_bak">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upload_button" android:layout_gravity="center|top"
                android:layout_centerHorizontal="true" android:text="上传" android:textSize="45dp"
                android:background="@color/toumin"/>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_gravity="bottom" android:gravity="bottom|left"
                android:layout_alignParentBottom="true" android:layout_marginBottom="55dp"
                android:background="@color/toumin">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zan_zu_button"
                    android:text="点赞"
                    android:textSize="45dp" android:background="@color/toumin" android:layout_marginLeft="15dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/update_button"
                    android:text="更新"
                    android:textSize="45dp" android:layout_marginLeft="105dp" android:background="@color/toumin"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>